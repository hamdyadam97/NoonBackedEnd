@model PrdouctBrandDto
@{
    ViewData["Title"] = "Edit";
    Layout = "_navbarLayout";
}

<h1>Edit</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name_Ar" class="control-label"></label>
        <input asp-for="Name_Ar" class="form-control" />
        <span asp-validation-for="Name_Ar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description_Ar" class="control-label"></label>
        <input asp-for="Description_Ar" class="form-control" />
        <span asp-validation-for="Description_Ar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BrandId" class="control-label">Brand Name</label>
        <select id="BrandId" name="BrandId" class="form-control">
            <option value="">Select Brand</option>
            @foreach (var brand in ViewBag.Cat)
            {
                <option value="@brand.Id">@brand.Name</option>
            }
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button> |
    <a class="btn btn-outline-sucess">Back To List</a>

</form>


