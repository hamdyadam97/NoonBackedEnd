@model IEnumerable<PrdouctBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "_navbarLayout";
}

<h1>All Product Brand In Noon</h1>
@if (Model.Count() > 0)
{
    <table class="table table-stripe table-hover">
        <thead>
        <th>Product name</th>
        <th>Product description</th>
        <th>Product price</th>
        <th>Product Brand</th>
        <th>Image</th>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrandDto.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>
                        <td>

                            <a class="btn btn-primary" asp-controller="ProductBrand" asp-action="Edit" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>

                            <a class="btn btn-primary" asp-controller="ProductBrand" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <div>No Brands</div>
}

