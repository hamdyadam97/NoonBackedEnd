@model IEnumerable<BrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "_navbarLayout";
}

<h1>All Brands In Noon</h1>
@if (Model.Count() > 0)
{
    <table class="table table-stripe table-hover">
        <thead>
            <th>BrandName</th>
            <th>Image</th>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImagePath)
                        </td>
                        <td>

                            <a class="btn btn-primary" asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>

                            <a class="btn btn-primary" asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                      
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <div>No Brands</div>
}

